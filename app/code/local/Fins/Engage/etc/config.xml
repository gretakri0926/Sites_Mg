<config>
    <modules>
        <Fins_Engage>
            <version>0.1.0</version>
        </Fins_Engage>
    </modules>
    <frontend>
        <routers>
            <engage>
                <use>standard</use>
                <args>
                    <module>Fins_Engage</module>
                    <frontName>engage</frontName>
                </args>
            </engage>
        </routers>
        <layout>
            <updates>
                <engage>
                    <file>engage.xml</file>
                </engage>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<engage>
				<use>admin</use>
				<args>
					<module>Fins_Engage</module>
					<frontName>engage</frontName>
				</args>
			</engage>
        </routers>
    </admin>
    <adminhtml>
		<menu>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Fins_Engage>
							<title>Engage Module</title>
							<sort_order>10</sort_order>
						</Fins_Engage>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<engage>
					<file>engage.xml</file>
				</engage>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <engage>
                <class>Fins_Engage_Model</class>
                <resourceModel>engage_mysql4</resourceModel>
            </engage>
            <engage_mysql4>
                <class>Fins_Engage_Model_Mysql4</class>
                <entities>
                    <engage>
                        <table>engage</table>
                    </engage>
                </entities>
            </engage_mysql4>
        </models>
        <resources>
            <engage_setup>
                <setup>
                    <module>Fins_Engage</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </engage_setup>
            <engage_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </engage_write>
            <engage_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </engage_read>
        </resources>
        <blocks>
            <engage>
                <class>Fins_Engage_Block</class>
            </engage>
        </blocks>
        <helpers>
            <engage>
                <class>Fins_Engage_Helper</class>
            </engage>
        </helpers>
    </global>
</config>
